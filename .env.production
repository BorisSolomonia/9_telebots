# Production Environment Variables for Telegram Bots
# This file serves as a template - actual values will come from GCP Secret Manager

# Telegram Bot Tokens (from Secret Manager)
TELEGRAM_TOKEN_BOT=
ORDER_BOT_TOKEN=

# OpenAI Configuration
OPENAI_API_KEY=

# Google Sheets Configuration
SHEET_NAME=9_ტონა_ფული
WORKSHEET_NAME_PAYMENTS=Payments
WORKSHEET_NAME_ORDERS=orders

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=nine-tones-bots-2025

# Google Sheets Credentials (JSON string from Secret Manager)
SHEETS_CREDS=
CREDS_FILE=/app/credentials.json

# Customer Data (JSON string from Secret Manager)
CUSTOMERS_JSON=
CUSTOMERS_FILE=/app/customers.json

# Bot Configuration
MESSAGE_COOLDOWN=5
PENDING_ORDER_TIMEOUT=300
CLEANUP_INTERVAL=600
MAX_RETRIES=3
RETRY_DELAY=2

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30

# Environment
ENVIRONMENT=production